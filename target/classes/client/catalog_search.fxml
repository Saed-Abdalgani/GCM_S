<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="client.boundary.CatalogSearchScreen"
      spacing="0" style="-fx-background-color: #0f0f23;">
    
    <!-- Header Section -->
    <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-padding: 20 30 20 30;">
        <VBox>
            <Label text="ðŸ—ºï¸ GCM City Catalog" style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;"/>
            <Label text="Search maps by city or point of interest" style="-fx-text-fill: rgba(255,255,255,0.8); -fx-font-size: 14px;"/>
        </VBox>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="backButton" text="â† Back to Login" onAction="#handleBack"
                style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 10 20; -fx-background-radius: 20; -fx-cursor: hand;"/>
    </HBox>
    
    <!-- Search Panel -->
    <VBox spacing="15" style="-fx-background-color: #1a1a2e; -fx-padding: 25;">
        
        <!-- Define ToggleGroup -->
        <fx:define>
            <ToggleGroup fx:id="searchModeGroup"/>
        </fx:define>
        
        <!-- Search Mode Selection -->
        <HBox alignment="CENTER" spacing="30">
            <Label text="Search Mode:" style="-fx-text-fill: #a0a0a0; -fx-font-size: 14px;"/>
            <RadioButton fx:id="cityModeRadio" text="By City" toggleGroup="$searchModeGroup" selected="true"
                        style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            <RadioButton fx:id="poiModeRadio" text="By POI" toggleGroup="$searchModeGroup"
                        style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            <RadioButton fx:id="bothModeRadio" text="City + POI" toggleGroup="$searchModeGroup"
                        style="-fx-text-fill: white; -fx-font-size: 14px;"/>
        </HBox>
        
        <!-- Search Input Fields -->
        <HBox spacing="15" alignment="CENTER">
            <VBox spacing="5" fx:id="cityInputBox">
                <Label text="City Name" style="-fx-text-fill: #a0a0a0; -fx-font-size: 12px;"/>
                <TextField fx:id="citySearchField" promptText="e.g., Haifa, Tel Aviv..."
                          prefWidth="250" prefHeight="40"
                          style="-fx-background-color: #16213e; -fx-text-fill: white; -fx-prompt-text-fill: #666; -fx-font-size: 14px; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #667eea; -fx-border-width: 1; -fx-padding: 8 15;"/>
            </VBox>
            
            <VBox spacing="5" fx:id="poiInputBox" visible="false" managed="false">
                <Label text="POI Name" style="-fx-text-fill: #a0a0a0; -fx-font-size: 12px;"/>
                <TextField fx:id="poiSearchField" promptText="e.g., Beach, Museum, Temple..."
                          prefWidth="250" prefHeight="40"
                          style="-fx-background-color: #16213e; -fx-text-fill: white; -fx-prompt-text-fill: #666; -fx-font-size: 14px; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #764ba2; -fx-border-width: 1; -fx-padding: 8 15;"/>
            </VBox>
            
            <Button fx:id="searchButton" text="ðŸ” Search" onAction="#handleSearch"
                    prefHeight="40" prefWidth="120"
                    style="-fx-background-color: linear-gradient(to right, #667eea, #764ba2); -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 8; -fx-cursor: hand;"/>
            
            <Button fx:id="showAllButton" text="ðŸ“‹ Show All" onAction="#handleShowAll"
                    prefHeight="40" prefWidth="120"
                    style="-fx-background-color: #16213e; -fx-text-fill: #667eea; -fx-font-size: 14px; -fx-border-color: #667eea; -fx-border-width: 1; -fx-border-radius: 8; -fx-background-radius: 8; -fx-cursor: hand;"/>
        </HBox>
        
        <!-- Status Label -->
        <Label fx:id="statusLabel" text="Ready to search. Enter a city or POI name, or click 'Show All' to browse the catalog."
               style="-fx-text-fill: #a0a0a0; -fx-font-size: 12px;" alignment="CENTER" maxWidth="Infinity"/>
    </VBox>
    
    <!-- Main Content Area -->
    <HBox VBox.vgrow="ALWAYS" spacing="0">
        
        <!-- Results List (Left Panel) -->
        <VBox prefWidth="400" style="-fx-background-color: #16213e; -fx-padding: 15;">
            <Label text="Search Results" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 0 0 10 0;"/>
            <ListView fx:id="resultsListView" VBox.vgrow="ALWAYS"
                     style="-fx-background-color: #0f0f23; -fx-control-inner-background: #0f0f23; -fx-background-radius: 8;"/>
            <Label fx:id="resultCountLabel" text="0 results" style="-fx-text-fill: #666; -fx-font-size: 11px; -fx-padding: 8 0 0 0;"/>
        </VBox>
        
        <!-- Details Panel (Right Panel) -->
        <VBox HBox.hgrow="ALWAYS" style="-fx-background-color: #0f0f23; -fx-padding: 20;">
            <Label text="City Details" style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 0 0 15 0;"/>
            
            <!-- City Info Card -->
            <VBox fx:id="detailsCard" spacing="15" style="-fx-background-color: #1a1a2e; -fx-background-radius: 12; -fx-padding: 20;" visible="false" managed="false">
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <Label fx:id="cityNameLabel" text="City Name" style="-fx-text-fill: #667eea; -fx-font-size: 24px; -fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Label fx:id="priceLabel" text="Price" style="-fx-text-fill: #27ae60; -fx-font-size: 20px; -fx-font-weight: bold;"/>
                </HBox>
                
                <Label fx:id="cityDescLabel" text="Description" style="-fx-text-fill: #ccc; -fx-font-size: 14px;" wrapText="true"/>
                
                <!-- Purchase Options (Phase 5) -->
                <VBox fx:id="purchaseBox" spacing="10" visible="false" managed="false" 
                      style="-fx-background-color: #2c3e50; -fx-padding: 10; -fx-background-radius: 8;">
                    <!-- Populated dynamically -->
                </VBox>
                
                <Separator/>
                
                <Label text="ðŸ“ Available Maps" style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                
                <ListView fx:id="mapsListView" prefHeight="200"
                         style="-fx-background-color: #0f0f23; -fx-control-inner-background: #0f0f23; -fx-background-radius: 8;"/>
                
                <!-- Map Details -->
                <VBox fx:id="mapDetailsBox" spacing="8" visible="false" managed="false" 
                      style="-fx-background-color: #16213e; -fx-background-radius: 8; -fx-padding: 15;">
                    <Label fx:id="mapNameLabel" text="Map Name" style="-fx-text-fill: #764ba2; -fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Label fx:id="mapDescLabel" text="Map Description" style="-fx-text-fill: #aaa; -fx-font-size: 13px;" wrapText="true"/>
                    <HBox spacing="20">
                        <Label fx:id="poiCountLabel" text="0 POIs" style="-fx-text-fill: #667eea; -fx-font-size: 12px;"/>
                        <Label fx:id="tourCountLabel" text="0 Tours" style="-fx-text-fill: #27ae60; -fx-font-size: 12px;"/>
                    </HBox>
                </VBox>
            </VBox>
            
            <!-- Empty State -->
            <VBox fx:id="emptyState" alignment="CENTER" spacing="15" VBox.vgrow="ALWAYS">
                <Label text="ðŸ”" style="-fx-font-size: 48px;"/>
                <Label text="Select a city to view details" style="-fx-text-fill: #666; -fx-font-size: 16px;"/>
                <Label text="Use the search bar or 'Show All' to explore available maps" style="-fx-text-fill: #444; -fx-font-size: 13px;"/>
            </VBox>
        </VBox>
    </HBox>
</VBox>
