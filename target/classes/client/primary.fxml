<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="25.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.PrimaryController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <children>
        <!-- Title -->
        <Label text="GCM City Manager" style="-fx-text-fill: #2c3e50;">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>

        <!-- Results Area -->
        <VBox spacing="5.0">
            <Label text="Results:" style="-fx-text-fill: #34495e; -fx-font-size: 14px;" />
            <TextArea fx:id="resultArea" prefHeight="250.0" prefWidth="500.0"
                      promptText="Server responses will appear here..."
                      style="-fx-font-family: 'Consolas', 'Monaco', monospace; -fx-font-size: 12px;"
                      wrapText="true" />
        </VBox>

        <!-- Show All Cities Section -->
        <VBox spacing="8.0" alignment="CENTER">
            <Label text="City Operations" style="-fx-text-fill: #34495e; -fx-font-size: 16px; -fx-font-weight: bold;" />
            <Button mnemonicParsing="false" onAction="#getAllCities"
                    text="Show All Cities"
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 20 8 20; -fx-background-radius: 5;" />
        </VBox>

        <!-- Navigation Section -->
        <VBox spacing="8.0" alignment="CENTER">
            <Label text="Advanced Features" style="-fx-text-fill: #34495e; -fx-font-size: 16px; -fx-font-weight: bold;" />
            <HBox alignment="CENTER" spacing="10.0">
                <Button mnemonicParsing="false" onAction="#openSearchScreen"
                        text="ðŸ” Browse Catalog"
                        style="-fx-background-color: #667eea; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 20 8 20; -fx-background-radius: 5;" />
                <Button mnemonicParsing="false" onAction="#openMapEditor"
                        text="âœï¸ Map Editor"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 8 20 8 20; -fx-background-radius: 5;" />
            </HBox>
        </VBox>

        <!-- Get Maps Section -->
        <VBox spacing="8.0" alignment="CENTER">
            <Label text="Get Maps by City ID" style="-fx-text-fill: #34495e; -fx-font-size: 14px;" />
            <HBox alignment="CENTER" spacing="10.0">
                <children>
                    <TextField fx:id="cityIdField" promptText="Enter City ID"
                               prefWidth="150.0"
                               style="-fx-font-size: 13px; -fx-padding: 6;" />
                    <Button mnemonicParsing="false" onAction="#getMaps"
                            text="Get Maps"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 6 15 6 15; -fx-background-radius: 5;" />
                </children>
            </HBox>
        </VBox>

        <!-- Update Price Section -->
        <VBox spacing="8.0" alignment="CENTER">
            <Label text="Update City Price" style="-fx-text-fill: #34495e; -fx-font-size: 14px;" />
            <HBox alignment="CENTER" spacing="10.0">
                <children>
                    <TextField fx:id="updateIdField" promptText="City ID"
                               prefWidth="120.0"
                               style="-fx-font-size: 13px; -fx-padding: 6;" />
                    <TextField fx:id="priceField" promptText="New Price"
                               prefWidth="120.0"
                               style="-fx-font-size: 13px; -fx-padding: 6;" />
                    <Button mnemonicParsing="false" onAction="#updatePrice"
                            text="Update Price"
                            style="-fx-background-color: #e67e22; -fx-text-fill: white; -fx-font-size: 13px; -fx-padding: 6 15 6 15; -fx-background-radius: 5;" />
                </children>
            </HBox>
        </VBox>
    </children>
</VBox>