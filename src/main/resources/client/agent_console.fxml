<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="client.boundary.AgentConsoleScreen"
            style="-fx-background-color: #0f0f23;">
    
    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: linear-gradient(to right, #9b59b6, #8e44ad); -fx-padding: 15 25;">
            <Button text="â† Back" onAction="#goBack"
                    style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 15; -fx-background-radius: 15;"/>
            <Label text="ðŸ“ž Agent Console" style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="agentInfoLabel" text="Agent" style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 14px;"/>
        </HBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <HBox spacing="20" style="-fx-padding: 20;">
            <!-- Left: Ticket Queues -->
            <VBox spacing="15" prefWidth="350" style="-fx-background-color: #1a1a2e; -fx-background-radius: 15; -fx-padding: 15;">
                <TabPane fx:id="queueTabPane" tabClosingPolicy="UNAVAILABLE">
                    <Tab text="My Tickets">
                        <VBox spacing="10" style="-fx-padding: 10;">
                            <ListView fx:id="myTicketsList" prefHeight="400"
                                      style="-fx-background-color: transparent;"/>
                            <Button text="â†» Refresh" onAction="#refreshMyTickets" prefWidth="310"
                                    style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 10;"/>
                        </VBox>
                    </Tab>
                    <Tab text="Pending Queue">
                        <VBox spacing="10" style="-fx-padding: 10;">
                            <ListView fx:id="pendingTicketsList" prefHeight="400"
                                      style="-fx-background-color: transparent;"/>
                            <HBox spacing="10">
                                <Button text="â†» Refresh" onAction="#refreshPendingQueue" HBox.hgrow="ALWAYS"
                                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 10;"/>
                                <Button text="Claim Selected" onAction="#claimTicket" HBox.hgrow="ALWAYS"
                                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-padding: 10; -fx-background-radius: 10;"/>
                            </HBox>
                        </VBox>
                    </Tab>
                </TabPane>
            </VBox>
            
            <!-- Right: Ticket Detail / Chat -->
            <VBox spacing="15" HBox.hgrow="ALWAYS" style="-fx-background-color: #1a1a2e; -fx-background-radius: 15; -fx-padding: 20;">
                <!-- Ticket Header -->
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <VBox HBox.hgrow="ALWAYS">
                        <Label fx:id="ticketSubjectLabel" text="Select a ticket" 
                               style="-fx-text-fill: white; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                        <Label fx:id="ticketInfoLabel" text="" 
                               style="-fx-text-fill: #aaa; -fx-font-size: 12px;"/>
                    </VBox>
                    <Button fx:id="resolveBtn" text="âœ“ Resolve and Close" onAction="#resolveTicket"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 15; -fx-background-radius: 15;" visible="false"/>
                </HBox>
                
                <Separator style="-fx-background-color: #333;"/>
                
                <!-- Messages -->
                <ScrollPane fx:id="messagesScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS"
                            style="-fx-background-color: transparent; -fx-background: transparent;">
                    <VBox fx:id="messagesContainer" spacing="10" style="-fx-padding: 10;">
                        <Label text="Select a ticket to view conversation" 
                               style="-fx-text-fill: #666; -fx-font-size: 14px;"/>
                    </VBox>
                </ScrollPane>
                
                <!-- Reply Input -->
                <VBox fx:id="replyBox" spacing="10" visible="false">
                    <TextArea fx:id="replyInput" promptText="Type your reply..." prefRowCount="3"
                              style="-fx-background-color: #16213e; -fx-text-fill: white; -fx-font-size: 14px; -fx-control-inner-background: #16213e;"/>
                    <HBox spacing="10" alignment="CENTER_RIGHT">
                        <Button text="Send Reply" onAction="#sendReply"
                                style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 13px; -fx-font-weight: bold; -fx-padding: 12 25; -fx-background-radius: 10;"/>
                    </HBox>
                </VBox>
            </VBox>
        </HBox>
    </center>
    
    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-background-color: #1a1a2e; -fx-padding: 10;">
            <Label fx:id="statusLabel" text="Ready" style="-fx-text-fill: #666; -fx-font-size: 11px;"/>
        </HBox>
    </bottom>
</BorderPane>
